    private void btnPalpíteActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnPalpíteActionPerformed
         // TODO add your handling code here:
         double n = 1 + Math.random()*(7-1);
         int valor = (int) n;
         int num = Integer.parseInt(txtSpinner.getValue().toString());
         String v1 = "Acertou";
         String v2 = "Errou, eu pensei no valor "+valor;
         String R = (valor==num)? v1:v2;
         lblFrase.setText(R);
         
    }//GEN-LAST:event_btnPalpíteActionPerformed

