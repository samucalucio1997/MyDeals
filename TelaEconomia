    private void btnRActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnRActionPerformed
        // TODO add your handling code here:
        double n = Double.parseDouble(txtC.getText());
        double v1 = Double.parseDouble(txtV1.getText());
        double v2 = Double.parseDouble(txtV2.getText());
        double r = Double.parseDouble(txtVr.getText());
        double d1 = Double.parseDouble(txtD1.getText());
        double d2 = Double.parseDouble(txtD2.getText());
        double V1 = v1*(r/v1 + d1/n);
        double V2 = v2*(r/v2 + d2/n);
        String p1 = "primeiro posto";
        String p2 = "segundo posto";
        String N = "que você preferir.";
        String k = (V1>V2)?p2:p1;
        double di = Math.abs(V1 - V2);
        String b = Double.toString(di);
        lblEco.setText(b);
        if (V1 != V2) {   lblVant.setText(k);
            } else { lblVant.setText(N);
        
        } 
       
    }//GEN-LAST:event_btnRActionPerformed

